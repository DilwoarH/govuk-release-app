<%= semantic_form_for @task do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :application, as: :select, label: "Application",
                 prompt: "Select an Application", include_blank: false,
                 input_html: { class: "input-xxlarge" } %>
    <%= f.input :version, label: "Version", input_html: { class: "input-xxlarge" } %>
    <%= f.input :description, label: "Description", input_html: { class: "input-xxlarge" } %>
  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
