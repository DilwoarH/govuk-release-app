<%= semantic_form_for @application do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :name, label: "Name", input_html: { class: "input-xxlarge" } %>
    <%= f.input :repo, label: "Repository", hint: "The location of the git repository",
                       input_html: { class: "input-xxlarge" } %>
  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
