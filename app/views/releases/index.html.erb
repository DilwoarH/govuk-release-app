<% content_for :page_title, "Releases" %>

<h1>Releases</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Applications</th>
    </tr>
  </thead>
  <tbody>
  <% @releases.each do |release| %>
    <tr>
      <td><%= release.created_at %></td>
      <td><%= release.applications.map(&:name).join(", ") %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Create Release", new_release_path, class: "btn btn-success" %>
