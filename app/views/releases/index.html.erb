<% content_for :page_title, "Releases" %>

<h1>Releases</h1>

<p><%= link_to "Book a release", new_release_path, class: "btn btn-success" %></p>

<h2>Today's Releases</h2>

<table class="table" id="today">
  <tbody>
  <% @todays_releases.each do |release| %>
    <tr>
      <td><%= link_to "##{release.id}", release_path(release) %></td>
      <td><%= link_to release.unique_applications.map(&:name).join(", "), release_path(release) %></td>
      <td><%= release.deploy_at.strftime('%l:%M%P') %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Future Releases</h2>

<table class="table" id="future">
  <tbody>
  <% @future_releases.each do |release| %>
    <tr>
      <td><%= link_to "##{release.id}", release_path(release) %></td>
      <td><%= link_to release.unique_applications.map(&:name).join(", "), release_path(release) %></td>
      <td><%= human_datetime(release.deploy_at) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
