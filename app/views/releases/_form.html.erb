<%= semantic_form_for @release do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :tasks, label: "Tasks", as: :check_boxes, input_html: { class: "input-xxlarge" },
                        collection: @tasks %>
    <%= f.input :notes, label: "Notes", input_html: { class: "input-xxlarge" } %>
  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
